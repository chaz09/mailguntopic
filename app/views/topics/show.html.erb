<h1> <%= @topic.title %> </h1>
<%= link_to "Add Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
<%= link_to "Edit", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
<%= link_to "Delete", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>

  <div class="row">
  <% @topic.bookmarks.each do |bookmark| %>
  <div class="col-sm-3">
      <%= bookmark.url %>
      <%= render partial: 'likes/like', locals: { bookmark: bookmark }%>
      <%= link_to "Delete Bookmark", bookmark, method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" } %> <br>
    </div>
    <% end %>

    </div>
    </div>

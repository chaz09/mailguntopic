<h1>Edit Topic</h1>
<%= link_to "Delete bookmark", @bookmark, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>

<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @bookmark] do |f| %>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: "URL" %>
      </div>
        <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
